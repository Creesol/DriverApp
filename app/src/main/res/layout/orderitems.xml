<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|center"
            android:layout_marginBottom="5dp"
            android:id="@+id/ImageProduct"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"

            android:contentDescription="Image of product"

            android:src="@drawable/ic_payment_black_24dp" />

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <Space
                android:id="@+id/spacer"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spacer"
                android:layout_centerVertical="true"
                android:text="100% pure Dairy Milk"


                android:textSize="13sp" />

            <TextView
                android:id="@+id/checkOutSize"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productName"
                android:layout_marginTop="3dp"
                android:text="50g-100g"
                android:textSize="8sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkOutSize"
                android:layout_gravity="center"

                android:layout_marginTop="2dp"
                android:id="@+id/Quantity"
                android:text="x3"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:id="@+id/Rate"

            android:layout_gravity="center_vertical"
            android:text="555 PKR"
            android:textSize="12sp"


            />




    </LinearLayout>

</android.support.v7.widget.CardView>

